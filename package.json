{
  "name": "juejin",
  "displayName": "掘金",
  "description": "A juejin extension in vscode",
  "version": "2.1.0",
  "publisher": "luzhenqian",
  "homepage": "https://github.com/luzhenqian/vscode-juejin",
  "repository": {
    "type": "git",
    "url": "https://github.com/luzhenqian/vscode-juejin"
  },
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:juejin.pins",
    "onCommand:juejin.post"
  ],
  "main": "./out/extension.js",
  "icon": "icon/icon.png",
  "contributes": {
    "configuration": {
      "title": "juejin-掘金",
      "properties": {
        "juejin.pins.head.text": {
          "type": "string",
          "default": "别看了，我在写代码。",
          "description": "自定义沸点顶部的文字"
        },
        "juejin.pins.comment.background-color": {
          "type": "string",
          "description": "沸点评论区背景色。必须按照css颜色标准格式填写，如：white、#FFFFFF、rgb(255, 255, 255)"
        },
        "juejin.post.default-category": {
          "type": "string",
          "default": "前端",
          "description": "文章默认分类。必须设置掘金官方的分类，如：前端、后端。"
        }
      }
    },
    "commands": [
      {
        "command": "juejin.post",
        "title": "掘金-文章"
      },
      {
        "command": "juejin.pins",
        "title": "掘金-沸点"
      }
    ],
    "keybindings": [
      {
        "command": "juejin.post",
        "key": "ctrl+p ctrl+p"
      },
      {
        "command": "juejin.pins",
        "key": "ctrl+j ctrl+j"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm-run-all compile:*",
    "_compile:extension": "tsc -p ./",
    "compile:extension": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "compile:views": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "tsc -watch -p ./",
    "watch:views": "webpack --watch --mode development",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.0",
    "@types/glob": "^7.1.1",
    "@types/highlight.js": "^10.1.0",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/qs": "^6.9.5",
    "@types/react": "^18.0.16",
    "@types/react-dom": "^18.0.6",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "autoprefixer": "^10.4.8",
    "css-loader": "^6.7.1",
    "esbuild": "^0.15.2",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "postcss-loader": "^7.0.1",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.3.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "@floating-ui/react-dom-interactions": "^0.9.2",
    "axios": "^0.21.4",
    "cheerio": "^1.0.0-rc.12",
    "dayjs": "^1.11.4",
    "highlight.js": "^11.6.0",
    "lodash": "^4.17.21",
    "markdown-it": "^13.0.1",
    "moment": "^2.29.2",
    "qs": "^6.9.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
